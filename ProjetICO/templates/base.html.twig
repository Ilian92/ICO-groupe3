<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
        <link rel="icon" href="{{ asset('images/favicon.svg') }}" />
        <link href="https://db.onlinewebfonts.com/c/92d107809e07d19ef1446daa906f8573?family=Chaloops+W00+Md+Reg" rel="stylesheet" type="text/css"/>
        <link href="https://db.onlinewebfonts.com/c/2cc96cec0b01c9bea5a33ef2402a348c?family=Filson+Pro" rel="stylesheet" type="text/css"/>
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
        <nav class="menu">
            <ul>
                <li>
                    <a href="{{ path('home') }}">
                        <img src="{{ asset('images/logo.svg') }}" alt="logo d'ICO" class="icon-logo">
                    </a>
                </li>
                <div class="inner-menu">
                    <li><a href="{{ path('rules') }}">Règles</a></li>
                    <li><a href="{{ path('register') }}">Register</a></li>
                    <li><a class="btn-ico btn-ico-rouge" href="">Achetez ICO</a></li>
                </div>
                <li>
                    <a href="{{ path('user_account') }}">
                        <img src="{{ asset('images/user.svg') }}" alt="icône utilisateur" class="icon-user">
                    </a>
                </li>
            </ul>
        </nav>
        <div class="inner-body">
            {% block body %}{% endblock %}
        </div>
        <footer>
            <div class="footer-inner container">
                <a href="{{ path('home') }}">
                    <img src="{{ asset('images/logo.svg') }}" alt="logo d'ICO" class="icon-logo">
                </a>
                <nav class="menu-footer">
                    <ul>
                        <li><a href="{{ path('home') }}">Accueil</a></li>
                        <li><a href="{{ path('rules') }}">Règles</a></li>
                        <li><a href="{{ path('register') }}">Register</a></li>
                        <li><a href="{{ path('news') }}">News</a></li>
                        <li><a href="{{ path('events') }}">Évènements</a></li>
                        <li><a class="btn-ico btn-ico-rouge" href="">Achetez ICO</a></li>
                    </ul>
                </nav>
            </div>
        </footer>
    </body>
</html>