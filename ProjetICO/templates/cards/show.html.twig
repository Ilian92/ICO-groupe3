{% extends 'base.html.twig' %}

{% block title %}Détails de la carte : {{ card.name }}{% endblock %}

{% block body %}
<article class="card-detail">
    <img src="{{ card.image }}" alt="{{ card.name }}">
    <div class="card-infos">
        <h1>{{ card.name }}</h1>
        <p>{{ card.description }}</p>
        <p><strong>Type :</strong> {{ card.type.name }}</p>
        <p><strong>Quantité :</strong> {{ card.quantity }}</p>
    </div>
</article>
<a href="{{ path('packs_show', { id: card.pack.id }) }}">Retour au pack : {{ card.pack.name }}</a>
{% endblock %}