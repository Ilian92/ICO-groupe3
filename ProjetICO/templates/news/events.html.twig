{% extends 'base.html.twig' %}

{% block title %}Événements{% endblock %}

{% block body %}
    <h1>Événements</h1>

    {% if events is empty %}
        <p>Aucun événement disponible pour le moment.</p>
    {% else %}
        <ul>
            {% for event in events %}
                <li>
                    <h2>{{ event.title }}</h2>
                    <p>{{ event.content }}</p>
                    <img src="{{ event.image }}" alt="{{ event.title }}">
                    <p>Débute le {{ event.StartDate|date('d/m/Y') }} à {{ event.StartDate|date('H:i') }}</p>
                    <p>Prend fin le {{ event.EndDate|date('d/m/Y') }} à {{ event.EndDate|date('H:i') }}</p>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
{% endblock %}
