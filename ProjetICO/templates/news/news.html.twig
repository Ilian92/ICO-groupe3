    {% extends 'base.html.twig' %}

    {% block title %}Actualités{% endblock %}

    {% block body %}
    <h1 class="news-title">Actualités</h1>

    {% if news is empty %}
        <p>Aucune actualité pour le moment.</p>
    {% else %}
        <div class="news-container">
            {% for item in news %}
                <a href="{{ path('news_show', {'id': item.id}) }}">
                    <article class="news-item">
                        <img class="news-image" src="{{ item.image }}" alt="{{ item.title }}" />
                        <div class="news-all-text">
                            <h2>{{ item.title }}</h2>
                            <p class="news-date">Publié le {{ item.CreatedAt|date('d/m/Y') }} à {{ item.CreatedAt|date('H:i') }}</p>
                            {% if item.updatedAt is not null %}
                                <p>Dernière mise à jour : {{ item.updatedAt|date('d/m/Y H:i') }}</p>
                            {% endif %}
                            {# <p class="news-content">{{ item.content|length > 100 ? item.content|slice(0, 1000) ~ '...' : item.content  }}</p> #}
                            <p class="news-content">{{ item.content }}</p>
                            <!-- Obtenir le statut 
                            <p>{{ item.StatusId.name }}</p> -->
                        </div>
                    </article>
                </a>
            {% endfor %}
        </div>
    {% endif %}
    {% endblock %}


