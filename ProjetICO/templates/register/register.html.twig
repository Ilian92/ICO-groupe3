{% extends 'base.html.twig' %}

{% block title %}Créer un utilisateur{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/register.css') }}">
{% endblock %}

{% block body %}
    <h1>Créer un utilisateur</h1>

{% if errorMessage is not empty %}
    <div class="form-errors">
        <ul>
            {% for error in errorMessage %}
                <li>{{ error }}</li>
            {% endfor %}
        </ul>
    </div>
{% endif %}

    {{ form_start(form, {'attr': {'class': 'form-container'}}) }}
        {{ form_widget(form, {'attr': {'class': 'form-input'}}) }}
        <button type="submit">Créer</button>
    {{ form_end(form) }}
{% endblock %}